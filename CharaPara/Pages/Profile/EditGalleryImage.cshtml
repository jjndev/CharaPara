@page
@model CharaPara.Pages.Profile.EditGalleryImageModel
@{
}


@{
    ViewData["Title"] = "Add Gallery Image";
}

<h2>Edit Gallery Image</h2>



<form method="post" id="textForm" >
    <div class="form-group">
        <label asp-for="GalleryImageVM.CreationType" class="control-label"></label>
        <select asp-for="GalleryImageVM.CreationType" class="form-control" required>
            <option value="">Select an Image Type</option>
            <option value="Artist">Artist</option>
            <option value="Editor">Editor</option>
            <option value="Photographer">Photographer</option>
            <option value="SourceMaterial">Source Material</option>
            <option value="AIModel">AI Model</option>
        </select>
        <span asp-validation-for="GalleryImageVM.CreationType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryImageVM.SourceCredit" class="control-label"></label>
        <input asp-for="GalleryImageVM.SourceCredit" class="form-control" />
        <span asp-validation-for="GalleryImageVM.SourceCredit" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryImageVM.Title" class="control-label"></label>
        <input asp-for="GalleryImageVM.Title" class="form-control" />
        <span asp-validation-for="GalleryImageVM.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GalleryImageVM.Description" class="control-label"></label>
        <textarea asp-for="GalleryImageVM.Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="GalleryImageVM.Description" class="text-danger"></span>
    </div>
    <input type="button" value="Upload Image" class="btn btn-primary" />
</form>



